.col-xs-12.col-sm-12.col-md-6.col-lg-4.col-lg-offset-4.col-md-offset-3.login-form
  = image_tag 'brain-logo-480x349.png', class: 'logo_sign_in'
  .well.no-padding
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %header
        %h2
          Log in
      %fieldset
        %section
          = f.label :email
          %label.input
            %i.icon-append.fa.fa-user
            = f.email_field :email, autofocus: true
            %b.tooltip.tooltip-top-right
              %i.fa.fa-user.txt-color-teal
              Please enter email address/username
        %section
          = f.label :password
          %label.input
            %i.icon-append.fa.fa-lock
            = f.password_field :password, autocomplete: "off"
            %b.tooltip.tooltip-top-right
              %i.fa.fa-lock.txt-color-teal
              Enter your password
          .note
            %a{:href => "forgotpassword.html"} Forgot password?
        %section
          %label.checkbox
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :remember_me
      %footer
        .actions
          = f.submit "Log in"
  = render "devise/shared/links"
  %h5.text-center - Or sign in using -
  %ul.list-inline.text-center
    %li
      = link_to '#', class: 'btn btn-primary btn-circle', id: 'sign_in_with_fb' do
        %i.fa.fa-facebook
    %li
      = link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-info btn-circle' do
        %i.fa.fa-google
    %li
      = link_to user_omniauth_authorize_path(:twitter), class: 'btn btn-warning btn-circle' do
        %i.fa.fa-twitter
