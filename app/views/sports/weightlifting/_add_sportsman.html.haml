= form_for @protocol, remote: true do |f|
  .row
    .col-lg-6
      = f.text_field :first_name, placeholder: 'Ім\'я', class: 'form-control'
    .col-lg-6
      = f.text_field :last_name, placeholder: 'Прізвище', class: 'form-control'
  .row
    .col-lg-6
      = f.text_field :address, placeholder: 'Команда', class: 'form-control'
    .col-lg-6
      = f.text_field :birthday,
                      placeholder: 'Дата народження',
                      class: 'form-control',
                      'data-provide' => 'datepicker'
  .row
    .col-lg-2
      = f.select :sex, User::GENDER, {}, class: 'form-control'
    .col-lg-2
      = f.text_field :weight, placeholder: 'Вага', class: 'form-control'
    .col-lg-2
      = f.select :class_id, @athletic_categories, {}, class: 'form-control'
    .col-lg-2
      = f.text_field :first_snatch, placeholder: 'Ривок', class: 'form-control'
    .col-lg-2
      = f.text_field :first_jerk, placeholder: 'Поштовх', class: 'form-control'
    .col-lg-2
  .row.col-lg-offset-5
    .col-lg-2
      = f.hidden_field :competition_id
      = f.submit 'Додати учасника', class: 'btn btn-default'